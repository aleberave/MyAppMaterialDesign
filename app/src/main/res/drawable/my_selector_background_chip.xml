<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Disabled -->
    <item android:color="#FFC107" android:state_enabled="false"/>

    <!-- Selected -->
    <item android:color="#000000" android:state_selected="true"/>
    <item android:color="#00FF0A" android:state_pressed="true"/>
    <item android:color="#FF1E00" android:state_checked="true"/>
    <item android:color="#00FFFF" android:state_window_focused="true"/>

    <!-- Not selected -->
    <item android:color="#003FF8" />
</selector>