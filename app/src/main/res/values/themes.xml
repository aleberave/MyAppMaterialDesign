<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.MyAppMaterialDesign" parent="Theme.Material3.DynamicColors.DayNight">
        <!-- Customize your light theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="myColorFirst">@color/myCustomFirst</item>
        <item name="myColorSecond">@color/myCustomSecond</item>
        <item name="colorPrimary">?attr/myColorFirst</item>
        <!--        <item name="colorOnSurface">?attr/myColorSecond</item>-->
        <item name="colorOnSecondaryContainer">#FF8401</item>
        <item name="colorPrimaryContainer">#01FFAF</item>
        <!--        <item name="colorSurface">?attr/myColorSecond</item>-->
        <item name="colorOnSurfaceVariant">#BB01FF</item>

        <item name="chipStyle">@style/MyChipStyle</item>
        <item name="textInputStyle">@style/MyTextInputLayoutStyle</item>

        <!--        <item name="textAppearanceLabelLarge">@style/MyTextAppearanceLabelLarge</item>-->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <item name="bottomAppBarStyle">@style/MyAppBottomBarStyle</item>
        <item name="appBarLayoutStyle">@style/MyAppToolBar</item>

        <item name="bottomNavigationStyle">@style/MyBottomNavigationView</item>
    </style>

    <style name="Theme.MyAppMaterialDesign" parent="Base.Theme.MyAppMaterialDesign" />

    <style name="MyNewTheme" parent="Base.Theme.MyAppMaterialDesign" />

    <style name="MyRedTheme" parent="MyNewTheme">
        <item name="myColorFirst">@color/redThemeFirst</item>
        <item name="myColorSecond">@color/redThemeSecond</item>
    </style>

    <style name="MyGreenTheme" parent="MyNewTheme">
        <item name="myColorFirst">@color/greenThemeFirst</item>
        <item name="myColorSecond">@color/greenThemeSecond</item>
    </style>

    <style name="MyBlueTheme" parent="MyNewTheme">
        <item name="myColorFirst">@color/blueThemeFirst</item>
        <item name="myColorSecond">@color/blueThemeSecond</item>
    </style>
</resources>