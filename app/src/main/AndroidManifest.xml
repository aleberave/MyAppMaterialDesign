<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ru.geekbrains.myappmaterialdesign">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyAppMaterialDesign"
        tools:targetApi="31">
        <activity
            android:name=".recycler.RecyclerActivity"
            android:exported="true" />

        <activity
            android:name=".animation.AnimationActivity"
            android:exported="true" />

        <activity
            android:name=".view.navigation.BottomBarActivity"
            android:exported="true" />

        <activity
            android:name=".view.navigation.StartActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/MySplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.settings.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.MyAppMaterialDesign" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>